<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_screen"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@color/primary2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32dp"
                android:text="UNOLINGO"
                android:textColor="@color/black"
                android:fontFamily="@font/acme"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Forget your password?"
                android:textColor="@color/black"
                android:fontFamily="@font/acme"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:elevation="50dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/card_login_background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:text="Reset Password"
            android:textAlignment="center"
            android:fontFamily="@font/acme"
            android:layout_marginTop="36dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <EditText
                android:hint="Email"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/acme"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/edit_text_login_background"
                android:id="@+id/resetEmail"/>



            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/button_login_background"
                android:text="Reset Password"
                android:textAllCaps="false"
                android:fontFamily="@font/acme"
                android:textSize="18dp"
                android:backgroundTint="@color/primary3"
                android:textColor="@color/white"
                android:id="@+id/resetBtn"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginBottom="42dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="Proceed to login"
                android:fontFamily="@font/acme"
                android:layout_weight="1"
                android:id="@+id/linkToLogin"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            android:padding="20dp"
            android:background="@drawable/loading"
            android:elevation="10dp"
            android:visibility="invisible"
            android:id="@+id/progressBar2">

            <ProgressBar
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="invisible"
                android:id="@+id/progressBar1"/>


        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>